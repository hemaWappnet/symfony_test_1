{% extends 'base.html.twig' %}

{% block title %}Create New Post{% endblock %}

{% block body %}
<div class="container" style="padding-top: 2rem; padding-bottom: 2rem;">
    <div class="card">
        <h1 class="post-title text-center">Create New Post</h1>

        {% for message in app.flashes('error') %}
        <div class="alert alert-error">
            {{ message }}
        </div>
        {% endfor %}

        {% if errors is defined %}
        <div class="alert alert-error">
            {% for error in errors %}
            <p>{{ error.message }}</p>
            {% endfor %}
        </div>
        {% endif %}

        <form action="{{ path('app_post_create') }}" method="post">
            <input type="hidden" name="_token" value="{{ csrf_token('post') }}" />

            <div class="form-group">
                <label for="title" class="form-label">Post Title</label>
                <input type="text" name="title" id="title" value="{{ title|default('') }}" class="form-input" placeholder="Enter an engaging title" required>
            </div>

            <div class="form-group">
                <label for="content" class="form-label">Post Content</label>
                <textarea name="content" id="content" rows="10" class="form-input form-textarea" placeholder="Write your amazing content here..." required>{{ content|default('') }}</textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Create Post</button>
            </div>
        </form>
    </div>

    <div class="text-center mt-8">
        <a href="{{ path('app_home') }}" class="btn btn-primary">Back to Posts</a>
    </div>
</div>
{% endblock %}