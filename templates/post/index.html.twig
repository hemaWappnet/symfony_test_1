{% extends 'base.html.twig' %}

{% block title %}Blog Posts{% endblock %}

{% block body %}
<div class="container" style="padding-top: 2rem; padding-bottom: 2rem;">
    <div class="text-center mb-6">
        <h1 class="post-title">Welcome to Our Blog</h1>
        <p class="text-gray-600">Discover amazing stories and insights</p>
    </div>

    <div class="text-center mb-6">
        <a href="{{ path('app_post_create') }}" class="btn btn-primary">Create New Post</a>
    </div>

    <div class="posts-list">
        {% for post in posts %}
        <div class="post-preview">
            <h2 class="post-preview-title">
                <a href="{{ path('app_post_show', {id: post.id}) }}">{{ post.title }}</a>
            </h2>
            <p class="post-preview-content">{{ post.content|slice(0, 150) }}...</p>
            <div class="post-preview-meta">
                Created: {{ post.createdAt|date('M j, Y') }}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}